{
    "dev": {
        "deamon": true,
        "use_mock": true,
        "docker": {
            "compose_files": [
                "@compose/appwrite.yaml",
                "@compose/dev.yaml"
            ],
            "profiles": [
                "dev",
                "appwrite"
            ]
        },
        "start_steps": [
            {
                "name": "Run AppWrite",
                "services": [
                    "redis",
                    "influxdb",
                    "mariadb",
                    "appwrite",
                    "appwrite-executor",
                    "appwrite-maintenance",
                    "appwrite-realtime",
                    "appwrite-schedule",
                    "appwrite-usage",
                    "appwrite-worker-audits",
                    "appwrite-worker-builds",
                    "appwrite-worker-certificates",
                    "appwrite-worker-databases",
                    "appwrite-worker-deletes",
                    "appwrite-worker-functions",
                    "appwrite-worker-mails",
                    "appwrite-worker-messaging",
                    "appwrite-worker-webhooks",
                    "telegraf",
                    "traefik"
                ],
                "env_file": "./@compose/envs/appwrite.env",
                "ready_url": "http://localhost:9880/login",
                "dependencies": [
                    {
                        "name": "appwrite.env",
                        "target": "./@compose/envs/appwrite.env",
                        "template": "./@compose/templates/appwrite.sample",
                        "help_url": "https://appwrite.io/docs/environment-variables#general"
                    }
                ]
            },
            {
                "name": "Run Core",
                "services": [
                    "db",
                    "core",
                    "ui",
                    "gateway"
                ],
                "dependencies": [
                    {
                        "name": "dev.env",
                        "target": "./@compose/envs/dev.env",
                        "template": "./@compose/templates/dev.sample",
                        "help_url": "http://localhost:9880/login"
                    }
                ]
            }
        ]
    },
    "docker": {
        "compose_files": [
            "docker-compose.yaml"
        ],
        "profiles": [
            "essential"
        ]
    }
}